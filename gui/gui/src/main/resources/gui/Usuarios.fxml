<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="telaUsuarios" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.UsuariosController">
   <center>
      <Pane fx:id="telaUsuario" prefHeight="700.0" prefWidth="1000.0">
         <children>
            <TableView fx:id="tabelaUsuarios" editable="true" fixedCellSize="0.0" layoutX="10.0" layoutY="80.0" prefHeight="605.0" prefWidth="981.0" style="-fx-border-color: aqua;" tableMenuButtonVisible="true">
              <columns>
                <TableColumn style="-fx-font-size: 15;" text="ID" />
                  <TableColumn prefWidth="250.0" style="-fx-font-size: 15;" text="Ativo" />
                  <TableColumn style="-fx-font-size: 15;" text="Nome" />
                  <TableColumn style="-fx-font-size: 15;" text="Email" />
                  <TableColumn prefWidth="250.0" style="-fx-font-size: 15;" text="Nome de Usuário" />
              </columns>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </TableView>
            <FlowPane prefHeight="70.0" prefWidth="1000.0" style="-fx-background-color: #e7e7e7;" translateZ="-5.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <children>
                  <Button fx:id="btnNovoUsuario" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onAction="#cadastrar" onMouseEntered="#aplicaEfeitos" prefHeight="50.0" prefWidth="165.0" style="-fx-background-color: white;" text="Novo Usuário">
                     <font>
                        <Font name="Calibri" size="15.0" />
                     </font>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <FlowPane.margin>
                        <Insets left="10.0" top="10.0" />
                     </FlowPane.margin>
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: pointer;">
                           <image>
                              <Image url="@img/userAdd.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="btnEditar" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onMouseEntered="#aplicaEfeitos" prefHeight="50.0" prefWidth="165.0" style="-fx-background-color: white;" text="Editar">
                     <graphic>
                        <ImageView fitHeight="35.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/userEdit.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <font>
                        <Font name="Calibri" size="15.0" />
                     </font>
                     <FlowPane.margin>
                        <Insets left="10.0" top="10.0" />
                     </FlowPane.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="btnDeletar" alignment="CENTER" graphicTextGap="10.0" mnemonicParsing="false" onMouseEntered="#aplicaEfeitos" prefHeight="50.0" prefWidth="165.0" style="-fx-background-color: white;" text="Deletar">
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/userRemove.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <font>
                        <Font name="Calibri" size="15.0" />
                     </font>
                     <FlowPane.margin>
                        <Insets left="10.0" top="10.0" />
                     </FlowPane.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </FlowPane>
         </children>
      </Pane>
   </center>
</BorderPane>
